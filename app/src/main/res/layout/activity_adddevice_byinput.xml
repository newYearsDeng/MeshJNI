<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/mesh_icon_background">

    <include layout="@layout/activity_title_layout"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:background="@drawable/mesh_adddevice_midback"
        android:layout_width="650px"
        android:layout_height="920px"
        android:layout_marginTop="20px">

        <ImageView
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginTop="25px"
            android:src="@drawable/mesh_adddev_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客厅"
            android:layout_marginTop="21px"
            android:textSize="30px"
            android:textColor="#333333"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18px"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18px"
                android:layout_height="25px"
                android:src="@drawable/mesh_adddev_location"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深圳大厦"
                android:layout_marginLeft="11px"
                android:textSize="24px"
                android:textColor="#333333"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="18px"
            android:src="@drawable/mesh_adddev_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="82px"
            android:gravity="center_vertical">
            <TextView
                style="@style/addDevText_Style_1"
                android:text="产品名称"
                />
            <TextView
                android:layout_toLeftOf="@+id/iv_right_1"
                style="@style/addDevText_Style_2"
                android:text="请选择" />
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_right_1"
                android:layout_alignParentRight="true"
                android:layout_width="12px"
                android:layout_height="22px"
                android:layout_marginRight="25px"
                android:src="@drawable/mesh_adddev_right"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:src="@drawable/mesh_adddev_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="82px"
            android:gravity="center_vertical">
            <TextView
                style="@style/addDevText_Style_1"
                android:text="房间" />
            <TextView
                android:layout_toLeftOf="@+id/iv_right_2"
                style="@style/addDevText_Style_2"
                android:text="请选择" />
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_right_2"
                android:layout_alignParentRight="true"
                android:layout_width="12px"
                android:layout_height="22px"
                android:layout_marginRight="25px"
                android:src="@drawable/mesh_adddev_right"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:src="@drawable/mesh_adddev_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="82px"
            android:gravity="center_vertical">
            <TextView
                style="@style/addDevText_Style_1"
                android:text="已连用户" />
            <TextView
                android:layout_toLeftOf="@+id/iv_right_3"
                style="@style/addDevText_Style_2"
                android:text="请选择" />
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_right_3"
                android:layout_alignParentRight="true"
                android:layout_width="12px"
                android:layout_height="22px"
                android:layout_marginRight="25px"
                android:src="@drawable/mesh_adddev_right"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:src="@drawable/mesh_adddev_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="82px"
            android:gravity="center_vertical">
            <TextView
                style="@style/addDevText_Style_1"
                android:text="添加用户" />
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_right_4"
                android:layout_alignParentRight="true"
                android:layout_width="12px"
                android:layout_height="22px"
                android:layout_marginRight="25px"
                android:src="@drawable/mesh_adddev_add"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:src="@drawable/mesh_adddev_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62px"
            android:gravity="center_vertical">
            <TextView
                style="@style/addDevText_Style_1"
                android:text="设备信息" />
        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80px"
                    android:layout_height="wrap_content"
                    android:text="mac:"
                    android:layout_marginLeft="57px"
                    android:textSize="24px"
                    android:textColor="#a1a1a1"/>
                <EditText
                    android:layout_width="320px"
                    android:layout_height="36px"
                    android:layout_marginRight="204px"
                    android:background="@drawable/mesh_adddev_mac_pin"
                    android:hint="请输入mac"
                    android:textColorHint="#a1a1a1"
                    android:layout_marginLeft="11px"
                    android:paddingLeft="11px"
                    android:textSize="24px"
                    android:textColor="#333333"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="22px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80px"
                    android:layout_height="wrap_content"
                    android:text="pin:"
                    android:layout_marginLeft="57px"
                    android:textSize="24px"
                    android:textColor="#a1a1a1"/>
                <EditText
                    android:layout_width="320px"
                    android:layout_height="36px"
                    android:layout_marginRight="204px"
                    android:background="@drawable/mesh_adddev_mac_pin"
                    android:layout_marginLeft="11px"
                    android:paddingLeft="11px"
                    android:textSize="24px"
                    android:textColor="#333333"
                    android:hint="请输入pin"
                    android:textColorHint="#a1a1a1"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">
                <TextView
                    style="@style/addDevText_Style_3"
                    android:text="【型号】"
                    android:layout_marginLeft="50px" />
                <TextView
                    style="@style/addDevText_Style_3"
                    android:text="mac"
                    android:layout_marginLeft="10px" />
                <TextView
                    style="@style/addDevText_Style_3"
                    android:text="【颜色】"
                    android:layout_marginLeft="64px" />
                <TextView
                    style="@style/addDevText_Style_3"
                    android:text="白色"
                    android:layout_marginLeft="10px" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">
                <TextView
                    style="@style/addDevText_Style_3"
                    android:text="【型号】"
                    android:layout_marginLeft="50px" />
                <TextView
                    style="@style/addDevText_Style_3"
                    android:text="mac"
                    android:layout_marginLeft="10px" />
                <TextView
                    style="@style/addDevText_Style_3"
                    android:text="【颜色】"
                    android:layout_marginLeft="64px" />
                <TextView
                    style="@style/addDevText_Style_3"
                    android:text="白色"
                    android:layout_marginLeft="10px" />

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

    <ImageButton
        android:layout_width="450px"
        android:layout_height="76px"
        android:scaleType="fitCenter"
        android:src="@drawable/mesh_adddev_button"
        android:layout_marginTop="41px"
        android:background="@null"
        />

</LinearLayout>
