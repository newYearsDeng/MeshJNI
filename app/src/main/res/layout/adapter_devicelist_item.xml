<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/mesh_devlist_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="43px"
            android:layout_height="50px"
            android:layout_marginLeft="26px"
            android:src="@drawable/mesh_devlist_lightblue"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_left"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/iv_left"
            android:text="所有设备"
            android:textColor="#333333"
            android:textSize="34px" />

        <CheckBox
            android:id="@+id/checkbox_light"
            android:layout_width="87px"
            android:layout_height="39px"
            android:layout_marginRight="26px"
            android:layout_alignParentRight="true"
            android:checked="false"
            android:background="@drawable/selector_checkbox_oc"
            android:button="@null"/>
    </RelativeLayout>

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:src="@drawable/mesh_devlist_line"
        />

</LinearLayout>
